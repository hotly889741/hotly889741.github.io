<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Web GIS - Hiển thị GeoJSON</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }
    #map {
      height: 90vh;
      width: 100%;
    }
  </style>
</head>
<body>
  <h2>Web GIS hiển thị điểm từ GeoJSON</h2>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    // Khởi tạo bản đồ
    var map = L.map('map').setView([21.0285, 105.8542], 13);

    // Lớp nền OSM
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // Tải dữ liệu GeoJSON từ file local (cùng thư mục)
    fetch('Hobaolinh.geojson')
      .then(response => response.json())
      .then(data => {
        var geojsonLayer = L.geoJSON(data, {
          onEachFeature: function (feature, layer) {
            // Gắn popup hiện thuộc tính nếu có (ví dụ: name)
            if (feature.properties && feature.properties.name) {
              layer.bindPopup("Tên: " + feature.properties.name);
            }
          },
          pointToLayer: function (feature, latlng) {
            return L.circleMarker(latlng, {
              radius: 6,
              fillColor: "#ff7800",
              color: "#000",
              weight: 1,
              opacity: 1,
              fillOpacity: 0.8
            });
          }
        }).addTo(map);

        // Zoom tới vùng chứa tất cả điểm
        map.fitBounds(geojsonLayer.getBounds());
      });
  </script>
</body>
</html>
